class Solution:
    def maxProfit(self, prices: List[int]) -> int:
        max_profit = 0
        l= 0 
        r = 1

        if len(prices) < 1:
            return 0

        while r < len(prices):
           # print(len(prices), l , r)
            max_profit_check = prices[r] - prices[l] 

            if prices[l] > prices[r]:
                #reset the buy day
                l = r 
            
            r += 1

            if max_profit_check > max_profit:
                max_profit = max_profit_check
        
        return max_profit
