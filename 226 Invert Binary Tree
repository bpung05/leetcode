# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution:
    def invertTree(self, root: Optional[TreeNode]) -> Optional[TreeNode]:
        #FIFO -> queue
        q = []
        q +=  [root]

        #while still nodes
        while len(q) > 0:
            
            node = q.pop(0)

            if not node:
                continue
            l = node.left
            r = node.right

            #invert it

            node.left = r
            node.right =l 

            adj = [node.left, node.right]

            for a in adj:

                #if we havent added it to the queue
                if (a not in q) and (a is not None):
                    q.append(a)
        return root

