class Solution:
    def lengthOfLongestSubstring(self, s: str) -> int:
        hash_map = {}
        ans = ""

        #store the characters if the characters is in the hash it breaks
        #otherwise add a right pointer, move the left to right.

        l = 0
        r = 0

        if len(s) <= 1:
            return len(s)

        for r in range(len(s)):
            char = s[r]

            if char in hash_map and hash_map[char] >= l:
                # Move left pointer past previous occurrence
                l = hash_map[char] + 1

            # Update last seen index
            hash_map[char] = r

            # Update longest substring
            if (r - l + 1) > len(ans):
                ans = s[l:r+1]
                print(ans, l, r)

        return len(ans)

                

